{
  "version": 2,
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "python manage.py migrate && python manage.py createcachetable && python manage.py collectstatic --noinput",
  "env": {
    "DJANGO_SETTINGS_MODULE": "mywebsite.settings"
  },
  "regions": [
    "sin1"
  ],
  "builds": [
    {
      "src": "wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "wsgi.py"
    }
  ]
}